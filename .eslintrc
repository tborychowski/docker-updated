{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"node": true,
		"es2022": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": "latest"
	},
	"rules": {
		"brace-style": [
			"error",
			"stroustrup",
			{
				"allowSingleLine": true
			}
		],
		"indent": [
			2,
			"tab"
		],
		"quotes": [
			2,
			"single",
			"avoid-escape"
		],
		"semi": [
			2,
			"always"
		],
		"func-call-spacing": [
			"error",
			"never"
		],
		"space-before-function-paren": [
			"error",
			"always"
		],
		"newline-per-chained-call": [
			"error",
			{
				"ignoreChainWithDepth": 3
			}
		],
		"no-undef": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-unused-vars": 2,
		"no-trailing-spaces": 2,
		"no-shadow": 2,
		"eol-last": 1,
		"curly": 0,
		"no-console": 0,
		"comma-dangle": 0,
		"no-cond-assign": 0,
		"prefer-promise-reject-errors": "error"
	}
}
